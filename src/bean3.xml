<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- 外部Bean注入测试 -->
    <bean id="userService" class="com.atguigu.service.UserService">
        <property name="userDao" ref="userDaoImpl"></property>
    </bean>
    <!-- 确实会默认加载! -->
    <bean id="userDaoImpl" class="com.atguigu.dao.UserDaoImpl"></bean>

    <!-- 内部Bean注入和级联注入 -->
    <bean id="emp" class="com.atguigu.bean.Emp">
        <property name="eName" value="Jack"></property>
        <property name="gender" value="男"></property>
        <property name="dept">
            <!-- 内部Bean -->
            <bean id="dept" class="com.atguigu.bean.Dept">
                <property name="dname" value="安保部"></property>
            </bean>
        </property>
    </bean>

    <!-- 级联赋值 -->
    <bean id="emp1" class="com.atguigu.bean.Emp">
        <property name="eName" value="rose"></property>
        <property name="gender" value="女"></property>
        <property name="dept" ref="dept1"></property>
        <property name="dept.dname" value="技术部"></property>
    </bean>
    <bean id="dept1" class="com.atguigu.bean.Dept">
        <property name="dname" value="财务部"></property>
    </bean>

    <!-- 注入集合 -->
    <bean id="stu" class="com.atguigu.collectiontype.Stu">
        <!-- 注入数组 -->
        <property name="array">
            <array>
                <value>张三</value>
                <value>李四</value>
                <value>王五</value>
            </array>
        </property>
        <!-- 注入链表 -->
        <property name="list">
            <list>
                <value>赵六</value>
                <value>七八</value>
            </list>
        </property>
        <!-- 注入Map -->
        <property name="map">
            <map>
                <entry key="21900100" value="张三丰"></entry>
                <entry key="21900101" value="王老五"></entry>
            </map>
        </property>
        <!-- 注入set -->
        <property name="set">
            <set>
                <value>葵花宝典</value>
                <value>九阳神功</value>
            </set>
        </property>
    </bean>


</beans>